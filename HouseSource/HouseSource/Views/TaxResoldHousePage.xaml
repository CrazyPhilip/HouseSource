                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <RadioButton x:Name="ResoldOnlyYesRadioButton" Text="是" GroupName="ResoldOnlyHouseMethod" IsChecked="{Binding ResoldOnlyYesRadio}"/>
