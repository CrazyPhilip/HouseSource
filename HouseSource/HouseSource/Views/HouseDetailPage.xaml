                    <!--详细信息-->
                    <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}" HasShadow="True" CornerRadius="5" Padding="10" Margin="5,0">
                        <Grid RowDefinitions="*,*,*,*,*" ColumnDefinitions="1*,3*,1*,3*">
                            <Label Grid.Row="0" Grid.Column="0" Text="单价：" FontSize="14"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding House.SinglePrice}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="0" Grid.Column="2" Text="挂牌：" FontSize="14"/>
                            <Label Grid.Row="0" Grid.Column="3" Text="01" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="朝向：" FontSize="14"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding House.PropertyDirection}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="1" Grid.Column="2" Text="楼层：" FontSize="14"/>
                            <Label Grid.Row="1" Grid.Column="3" Text="{Binding House.Floor}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="2" Grid.Column="0" Text="装修：" FontSize="14"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding House.PropertyDecoration}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="2" Grid.Column="2" Text="年代：" FontSize="14"/>
                            <Label Grid.Row="2" Grid.Column="3" Text="" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="3" Grid.Column="0" Text="用途：" FontSize="14"/>
                            <Label Grid.Row="3" Grid.Column="1" Text="住宅" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="3" Grid.Column="2" Text="权属：" FontSize="14"/>
                            <Label Grid.Row="3" Grid.Column="3" Text="" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="4" Grid.Column="0" Text="小区：" FontSize="14"/>
                            <Label Grid.Row="4" Grid.Column="1" Text="{Binding House.EstateName}" FontSize="14" TextColor="Black"/>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}" HasShadow="True" CornerRadius="5" Padding="10" Margin="5,0">
                        <Grid RowDefinitions="*,*">
                            <Label Grid.Row="0" Text="房源介绍" TextColor="Black" FontSize="16"/>
                            <Label Grid.Row="1" Text="{Binding House.PropertyIntroduce}" FontSize="14"/>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}" HasShadow="True" CornerRadius="5" Padding="10" Margin="5,0">
                        <Grid RowDefinitions="*,*" ColumnDefinitions="1*,3*,1*,3*">
                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Text="房源介绍" TextColor="Black" FontSize="16"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="业主：" FontSize="14"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding House.ownername}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="1" Grid.Column="2" Text="电话：" FontSize="14"/>
                            <Label Grid.Row="1" Grid.Column="3" Text="{Binding House.ownermobile}" FontSize="14" TextColor="Black"/>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}" HasShadow="True" CornerRadius="5" Padding="10" Margin="5,0">
                        <Grid RowDefinitions="*,*">
                            <Label Grid.Row="0" Text="服务介绍" TextColor="Black" FontSize="16"/>
                            <Label Grid.Row="1" Text="{Binding House.ServiceIntroduce}" FontSize="14"/>
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="{DynamicResource ControlBackgroundColor}" HasShadow="True" CornerRadius="5" Padding="10" Margin="5,0">
                        <Grid RowDefinitions="20,*,*" ColumnDefinitions="*,*" RowSpacing="0" ColumnSpacing="0">
                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="您是录入人，以下内容仅对您可见" TextColor="Black" FontSize="16"/>
                            <Button Grid.Row="1" Grid.Column="0" Text="联系业主" Command="{Binding CallOwnerCommand}"/>
                            <Button Grid.Row="1" Grid.Column="1" Text="看跟进" Command="{Binding SeeFollowUpCommand}"/>
                            <Button Grid.Row="2" Grid.Column="0" Text="写跟进" Command="{Binding WriteFollowUpCommand}"/>
                            <Button Grid.Row="2" Grid.Column="1" Text="修改房源" Command="{Binding EditCommand}"/>
                        </Grid>
                    </Frame>
                </StackLayout>
            </ScrollView>

            <!--底部栏-->
            <Grid Grid.Row="1" RowDefinitions="*,*" ColumnDefinitions="50,*,100" Padding="5">
                <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" CornerRadius="5" HasShadow="False" Padding="0">
                    <ff:CachedImage Source="avatar.png"/>
                </Frame>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding House.EmpName}" FontSize="16" TextColor="Black"/>
                <Label Grid.Row="1" Grid.Column="1" Text="房屋信息发布人" FontSize="12"/>
                <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" CornerRadius="5"
                        Text="致电" TextColor="White" BackgroundColor="#6ecbb8"
                        Command="{Binding CallCommand}"/>
            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>