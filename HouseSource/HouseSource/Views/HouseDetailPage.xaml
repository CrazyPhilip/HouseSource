<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:viewModels="clr-namespace:HouseSource.ViewModels"
             mc:Ignorable="d"
             x:Class="HouseSource.Views.HouseDetailPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             x:Name="houseDetailPage"
             Title="房源详情">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="分享" IconImageSource="share.png" Command="{Binding ShareCommand}"/>
        <ToolbarItem Text="收藏" IconImageSource="{Binding StarSource}" Command="{Binding CollectCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid RowDefinitions="*,50">

            <ScrollView Grid.Row="0">
                <StackLayout Orientation="Vertical">
                    <!--图片集-->
                    <CarouselView ItemsSource="{Binding PhotoList}" HeightRequest="250">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <ff:CachedImage Source="{Binding .}" BackgroundColor="Transparent" Aspect="AspectFit">
                                    <ff:CachedImage.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1"
                                                              Command="{Binding Path=BindingContext.CarouselTappedCommand, Source={x:Reference Name=houseDetailPage}}"
                                                              CommandParameter="{Binding .}"/>
                                    </ff:CachedImage.GestureRecognizers>
                                </ff:CachedImage>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!--简要信息，原app的Card-->
                    <Frame BorderColor="LightGray" HasShadow="True" CornerRadius="10" Margin="10,5" Padding="10">
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding HouseTitle}" TextColor="Black" FontSize="16" FontAttributes="Bold" Margin="5"/>
                            <BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill" Margin="5"/>
                            <StackLayout Orientation="Horizontal" Margin="5">
                                <Label Text="精装" BackgroundColor="LightGray" FontSize="14"/>
                                <Label Text="可预约" BackgroundColor="LightGray" FontSize="14"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Margin="5">
                                <Label Text="{Binding House.Price,StringFormat='{0:F2}万元'}" TextColor="Red" FontSize="18" HorizontalOptions="StartAndExpand"/>
                                <Label Text="{Binding House.RoomStyle}" TextColor="Red" FontSize="16" HorizontalOptions="CenterAndExpand"/>
                                <Label Text="{Binding House.Square,StringFormat='{0:F2}㎡'}" TextColor="Red" FontSize="16" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Margin="5">
                                <Frame HasShadow="False" IsClippedToBounds="True" Padding="0" VerticalOptions="Center">
                                    <Image HeightRequest="40" WidthRequest="40" Source="avatar.png"/>
                                </Frame>

                                <StackLayout Orientation="Vertical">
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding House.EmpName}" FontSize="16" TextColor="Black"/>
                                                <Span Text="|" FontSize="16"/>
                                                <Span Text="{Binding House.DeptName}" FontSize="14"/>
                                                <Span Text="{Binding House.RegPerson}" FontSize="14"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Text="房屋信息发布人" FontSize="12"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <!--详细信息-->
                    <StackLayout Orientation="Vertical" Margin="10,5">
                        <Label FontSize="16">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text=">>" TextColor="#6ecbb8"/>
                                    <Span Text="基本信息" TextColor="Black"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill"/>
                        <Grid Margin="5" RowDefinitions="*,*,*,*,*" ColumnDefinitions="1*,3*,1*,3*">

                            <Label Grid.Row="0" Grid.Column="0" Text="单价：" FontSize="14"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding House.SinglePrice}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="0" Grid.Column="2" Text="挂牌：" FontSize="14"/>
                            <Label Grid.Row="0" Grid.Column="3" Text="01" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="朝向：" FontSize="14"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding House.PropertyDirection}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="1" Grid.Column="2" Text="楼层：" FontSize="14"/>
                            <Label Grid.Row="1" Grid.Column="3" Text="{Binding House.Floor}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="2" Grid.Column="0" Text="装修：" FontSize="14"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding House.PropertyDecoration}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="2" Grid.Column="2" Text="年代：" FontSize="14"/>
                            <Label Grid.Row="2" Grid.Column="3" Text="" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="3" Grid.Column="0" Text="用途：" FontSize="14"/>
                            <Label Grid.Row="3" Grid.Column="1" Text="住宅" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="3" Grid.Column="2" Text="权属：" FontSize="14"/>
                            <Label Grid.Row="3" Grid.Column="3" Text="" FontSize="14" TextColor="Black"/>

                            <Label Grid.Row="4" Grid.Column="0" Text="小区：" FontSize="14"/>
                            <Label Grid.Row="4" Grid.Column="1" Text="{Binding House.EstateName}" FontSize="14" TextColor="Black"/>

                        </Grid>

                        <Label FontSize="16">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text=">>" TextColor="#6ecbb8"/>
                                    <Span Text="房源介绍" TextColor="Black"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill"/>
                        <Label Text="{Binding House.PropertyIntroduce}" FontSize="12"/>

                        <Label FontSize="16">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text=">>" TextColor="#6ecbb8"/>
                                    <Span Text="业主介绍" TextColor="Black"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill"/>
                        <Grid Margin="5" ColumnDefinitions="1*,3*,1*,3*">
                            <Label Grid.Column="0" Text="业主：" FontSize="14"/>
                            <Label Grid.Column="1" Text="{Binding House.ownername}" FontSize="14" TextColor="Black"/>

                            <Label Grid.Column="2" Text="电话：" FontSize="14"/>
                            <Label Grid.Column="3" Text="{Binding House.ownermobile}" FontSize="14" TextColor="Black"/>
                        </Grid>

                        <Label FontSize="16">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text=">>" TextColor="#6ecbb8"/>
                                    <Span Text="服务介绍" TextColor="Black"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill"/>
                        <Label Text="{Binding House.ServiceIntroduce}" FontSize="12"/>

                        <Label FontSize="16" IsVisible="{Binding Visible}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text=">>" TextColor="#6ecbb8"/>
                                    <Span Text="您是录入人，以下内容仅对您可见" TextColor="Black"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <BoxView Color="LightGray" HeightRequest="1" HorizontalOptions="Fill" IsVisible="{Binding Visible}"/>
                        <Grid Margin="5" RowDefinitions="*,*" ColumnDefinitions="*,*" IsVisible="{Binding Visible}">
                            <Button Grid.Row="0" Grid.Column="0" Text="联系业主"/>
                            <Button Grid.Row="0" Grid.Column="1" Text="看跟进"/>
                            <Button Grid.Row="1" Grid.Column="0" Text="写跟进"/>
                            <Button Grid.Row="1" Grid.Column="1" Text="修改房源"/>
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <!--底部栏-->
            <Grid Grid.Row="1" RowDefinitions="*,*" ColumnDefinitions="50,*,100" Margin="5,0">
                <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" HeightRequest="30" WidthRequest="30" CornerRadius="15" HasShadow="False" 
                       IsClippedToBounds="True" Padding="0" VerticalOptions="Center">
                    <Image HeightRequest="30" WidthRequest="30" Source="avatar.png"/>
                </Frame>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding House.EmpName}" FontSize="16" TextColor="Black"/>
                <Label Grid.Row="1" Grid.Column="1" Text="房屋信息发布人" FontSize="12"/>
                <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Padding="0"
                        Text="致电" TextColor="White" BackgroundColor="#6ecbb8" FontSize="14"
                        HeightRequest="40" CornerRadius="20"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        Command="{Binding CallCommand}"/>
            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>